<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:ProductiviesApp.ViewModels"
             x:Class="ProductiviesApp.MainPage"
             x:DataType="ViewModels:MainPageViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label FontSize="50" 
            Text="{Binding PodoromoUnitModel.Timer, StringFormat='{0:mm\\:ss}'}" />
        <Button Grid.Row="1" Text="Test Button" Command="{Binding StartTimer}"/> 
    </Grid>
</ContentPage>
